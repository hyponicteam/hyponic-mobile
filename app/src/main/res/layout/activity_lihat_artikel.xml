<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LihatArtikelActivity"
    android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageArtikelView"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_image_default" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/title"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_bold"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"/>


            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Kategori"
                android:textSize="16sp"
                android:textColor="@color/navHyponic"
                android:fontFamily="@font/poppins_bold"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"/>

            <TextView
                android:id="@+id/editedBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_regular"
                android:text="oleh"
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"/>


            <TextView
                android:id="@+id/isiArtikel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="@string/isiArtikel"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular"
                android:padding="16sp"
                android:lineSpacingExtra="5sp"
                />

        </LinearLayout>
</ScrollView>